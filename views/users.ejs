<!DOCTYPE html>
<html>
<head>
  <title>Users Listing</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/userInfo.css">
</head>
<body>
  <div class="container">
    <h1>Users List</h1>
    <a href="/addUser" class="add-btn">+ Add New User</a>
    <table>
      <thead>
        <tr>
          <th>Sr. No</th>
          <th>Name</th>
          <th>Class</th>
          <th>Roll No</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% docs.forEach((user, index) => { %>
          <tr>
            <td><%= (limit * (currentPage - 1)) + index + 1 %></td>
            <td><%= user.name %></td>
            <td><%= user.class %></td>
            <td><%= user.rollNo %></td>
            <td>
              <a href="/userDetails/<%= user._id %>">
                <button class="action-btn view-btn">View</button>
              </a>
              <a href="/updateUser/<%= user._id %>/edit">
                <button class="action-btn edit-btn">Edit</button>
              </a>
              <form action="/deleteUser/<%= user._id %>" method="POST" style="display:inline;">
                <button type="submit" class="action-btn delete-btn" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>  
    </table>
    <div class="pagination">
      <button class="page-btn" <%= currentPage === 1 ? "disabled" : "" %> onclick="window.location.href='?page=<%= currentPage - 1 %>'">Previous</button>
      <% for(let i = 1; i <= totalPages; i++) { %>
        <button class="page-btn <%= currentPage === i ? 'active' : '' %>" onclick="window.location.href='?page=<%= i %>'"><%= i %></button>
      <% } %>
      <button class="page-btn" <%= currentPage === totalPages ? "disabled" : "" %> onclick="window.location.href='?page=<%= currentPage + 1 %>'">Next</button>
    </div>
  </div>
</body>
</html>